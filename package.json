{
  "name": "labofolio",
  "version": "1.0.0",
  "description": "foway's blog",
  "author": "foway0",
  "license": "ISC",
  "homepage": "https://github.com/foway0/labofolio#readme",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon -e ts,yaml -w src -x 'ts-node -r dotenv/config ./src/index.ts'",
    "build": "tsc && run-s build:yaml",
    "build:yaml": "cp -r src/api_specs dist",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "test": "ava -v",
    "coverage": "nyc --reporter html ava"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-openapi-validator": "^3.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.15",
    "@types/sinon": "^7.5.1",
    "@types/sinon-express-mock": "^1.3.7",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "ava": "^2.4.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "sinon": "^8.0.1",
    "sinon-express-mock": "^2.2.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foway0/labofolio.git"
  },
  "bugs": {
    "url": "https://github.com/foway0/labofolio/issues"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
